@model Shooping.Models.StateViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Departamento/Estado</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="EditState">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="CountryId" />
            <input type="hidden" asp-for="Id" />
            
            <partial name = "_AddState" /> <!--Hace llamado de la Vista parcial--> 

            <br />
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-outline-primary" />
                <a asp-action="Details" asp-route-id="@Model.CountryId" class="btn btn-outline-success" >Regresar</a>
             </div>
        </form>
    </div><!--cia.123-->

</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
