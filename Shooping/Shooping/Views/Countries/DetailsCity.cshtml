@model Shooping.Data.Entities.City

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles</h1>

<div>

    <partial name="_CityDetails" /> <!--Hace llamado de la Vista parcial-->

</div>
<div>
    <a asp-action="EditCity" asp-route-id="@Model?.Id" class="btn btn-outline-warning">Editar</a>
    <a asp-action="DeleteCity" asp-route-id="@Model?.Id" class="btn btn-outline-warning">Borrar</a>
    <a asp-action="DetailsState" asp-route-id="@Model?.State.Id" class="btn btn-outline-success">Regresar</a>
</div>
