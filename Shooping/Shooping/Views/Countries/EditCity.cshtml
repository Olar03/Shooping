@model Shooping.Models.CityViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Ciudad</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="EditCity">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="StateId" />
            <input type="hidden" asp-for="Id" />

            <partial name="_AddCity" /> <!--Hace llamado de la Vista parcial-->

            <br />
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-outline-primary" />
                <a asp-action="DetailsState" asp-route-id="@Model.StateId" class="btn btn-outline-success">Regresar</a>
            </div>
        </form>
    </div><!--cia.123-->
</div>



@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
